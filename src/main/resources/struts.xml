<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
    <constant name="struts.objectFactory.spring.autoWire" value="type" />
    <package name="user" namespace="/" extends="struts-default">
        <action name="show" class="com.iversonx.struts_springmvc.action.UserAction" method="show">
            <result name="success">show-struts.jsp</result>
        </action>
        <action name="addUser" class="com.iversonx.struts_springmvc.action.UserAction" method="add">
            <result name="success"></result>
            <result name="add">add.jsp</result>
        </action>
        <action name="testForm" class="com.iversonx.struts_springmvc.action.UserAction" method="testAjax" />
    </package>
    <include file="/lms/struts.xml"/>
</struts>